{% extends 'base.html.twig' %}

{% block title %}{{ article.artNom }}{% endblock %}

{% block body %}


<div class="container">
    <h1>{{article.artNom}}</h1>

    <table class="table row">
        <tr>
            <td>
                <img height="500rem" src="{{asset('images/articles/' ~ article.artPhoto) }}" alt="">
            </td>
            <td>
                <b>{{ article.artNom }}</b> <br>
                {{ article.artPrixTtc }} <br><br>
                {{ article.artDescription | raw }}


            </td>

        </tr>



    </table>





</div>

{% endblock %}