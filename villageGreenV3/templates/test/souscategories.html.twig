{% extends 'base.html.twig' %}

{% block title %}{{ categorie.catNom }}{% endblock %}

{% block body %}


<div class="container">

    <h1 class="text-center"> {{categorie.catNom}}</h1>
    <br><br>
    <section class="articles row text-center">

        {% for souscategorie in categorie.sousCategories %}
        <article class="col-4 col">
            <a href="{{ path('articles', {'id': souscategorie.id}) }}">
            <img src=" {{ asset('images/sous_categories/' ~ souscategorie.souCatImage) }}" height= "25%" alt="{{ souscategorie.souCatNom }}"></a> <br>
            <h2> {{souscategorie.souCatNom}} </h2>
        </article>
        {% endfor %}
    </section>
</div>



<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


{% endblock %}
