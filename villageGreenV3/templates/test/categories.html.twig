{% extends 'base.html.twig' %}

{% block title %}Nos catégories{% endblock %}

{% block body %}


<div class="container">

    <h1 class="text-center">Nos catégories</h1>
    <br><br>
    <section class="articles row text-center">

        {% for categorie in categories %}
        <article class="col-4 col">
            <a href="{{path('sous_categories', {'id': categorie.id}) }}">
            <img src=" {{ asset('images/categories/' ~ categorie.catImage) }}" height= "25%" alt="{{ categorie.catNom }}"></a> <br>
            <h2> {{categorie.catNom}} </h2>
        </article>
        {% endfor %}
    </section>
</div>



<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


{% endblock %}
